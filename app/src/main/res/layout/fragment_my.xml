<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_myFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="20sp"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/svg_ic_chathead"
            android:layout_marginLeft="10dp"
            android:id="@+id/img_ChatHead"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_border"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_account"
            android:text="admin"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="110dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_UserMore"
            android:src="@drawable/svg_ic_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        android:id="@+id/title_line"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:background="@color/under_line"
        app:layout_constraintTop_toBottomOf="@id/title"
        />

    <RelativeLayout
        android:id="@+id/accountSecurity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/title_line"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/svg_ic_accountsecurity"
            android:layout_marginLeft="10dp"
            android:id="@+id/img_accountSecurity"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/tv_accountSecurity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:text="关于北斗监测"
            android:textColor="@color/text_black"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_accountSecurityMore"
            android:src="@drawable/svg_ic_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:background="@color/under_line"
        app:layout_constraintTop_toBottomOf="@id/accountSecurity"
        />

    <RelativeLayout
        android:id="@+id/messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/accountSecurity"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/svg_ic_messages"
            android:layout_marginLeft="10dp"
            android:id="@+id/img_messages"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_messages"
            android:text="帮助与反馈"
            android:textColor="@color/text_black"
            android:textSize="17sp"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_message"
            android:src="@drawable/svg_ic_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        android:id="@+id/message_line"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:background="@color/under_line"
        app:layout_constraintTop_toBottomOf="@id/messages"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/btn_quit"
        android:text="退出"
        android:textStyle="bold"
        android:layout_marginTop="260dp"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:layout_constraintTop_toBottomOf="@id/message_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:backgroundTint="@color/main_blue"
        app:cornerRadius="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>