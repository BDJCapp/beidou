<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_back"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/shape_login_form"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_loginByPwd"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="密码登录"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/main_blue"
                >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="账号 :   "
                    android:textSize="15sp"
                    android:textColor="@color/text_black"
                    >
                </TextView>

                <EditText
                    android:id="@+id/et_loginAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="15sp"
                    android:hint="请输入账号/手机号码/邮箱"
                    android:background="@null"
                    >
                </EditText>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:background="@color/under_line"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="密码 :   "
                    android:textSize="15sp"
                    android:textColor="@color/text_black"
                    >
                </TextView>

                <EditText
                    android:id="@+id/et_loginCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:textSize="15sp">

                </EditText>
                <ImageView
                    android:id="@+id/img_visiblePwd"
                    android:layout_width="27dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/text_black"
                    android:src="@drawable/ic_pwd_invisible"
                    android:layout_marginLeft="80dp"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:background="@color/under_line"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_pictureCode"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                >

                <TextView
                    android:id="@+id/tv_pictureCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="图形码:"
                    android:textColor="@color/text_black"
                    android:textSize="15sp">
                </TextView>

                <EditText
                    android:id="@+id/et_pictureCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:hint="(区别大小写）"
                    android:background="@null"
                    >
                </EditText>
                <ImageView
                    android:id="@+id/img_pictureCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/text_black"
                    android:layout_marginLeft="40dp"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:background="@color/under_line"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_login"
                android:text="登录"
                android:layout_marginTop="20dp"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:backgroundTint="@color/main_blue"
                app:cornerRadius="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_forgetPwd"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="250dp"
                android:text="忘记密码？">
            </TextView>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>