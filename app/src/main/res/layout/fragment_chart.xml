                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_chartTimeDeltaH"
                android:text="数据"
                android:textSize="10sp"
                android:textColor="@color/text_gray"
                android:layout_below="@+id/tv_chartNameDeltaH"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >
            <View
                android:id="@+id/lineEstDeltaH"
                android:layout_width="20dp"
                android:layout_height="8px"
                android:background="@color/estimate_line"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estimateLineName_DeltaH"
                android:textSize="11dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_gray"
                android:layout_toRightOf="@id/lineEstDeltaH"
                />
        </RelativeLayout>
        <com.beyond.beidou.views.MyChartView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chart_DeltaH"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:id="@+id/layout_chartHeart"
        android:layout_marginTop="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_svg_heartchart"
                android:id="@+id/img_icChartHeart"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_chartNameHeart"
                android:text="@string/heartChartName"
                android:textSize="18dp"
                android:textColor="@color/text_black"
                android:layout_toRightOf="@id/img_icChartHeart"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_coordinateSystemHeart"
                android:text="暂无"
