<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".data.ChartFragment"
    android:id="@+id/header"
    >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/OverflowMenuStyle"
            app:contentInsetStart="0dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_chart_back"
                    android:src="@drawable/ic_svg_back"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_title"
                    android:text="暂无数据"
                    android:textColor="@color/text_black"
                    android:textSize="18sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxWidth="200dp"
                    android:layout_centerInParent="true"
                    />

                <TextView
                    android:id="@+id/tv_load_excel"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:gravity="center"
                    android:text="@string/loadExcel"
                    android:textColor="@color/main_blue"
                    android:textSize="13sp"
                    android:visibility="gone"
                    />
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/line_title"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/under_line"
        android:layout_below="@+id/tb_chart"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_title"
        android:layout_marginTop="5dp"
        android:id="@+id/layout_spinner"
        android:orientation="horizontal"
        >

        <Spinner
            android:id="@+id/sp_device"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:dropDownWidth="180dp"
            android:entries="@array/ProjectName"
            android:overlapAnchor="false"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:theme="@style/spinner_style" />

        <com.beyond.beidou.views.MySpinner
            android:id="@+id/sp_chart_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:dropDownWidth="180dp"
            android:entries="@array/ProjectName"
            android:overlapAnchor="false"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:theme="@style/spinner_style" />
    </LinearLayout>

    <com.beyond.beidou.views.MyScrollView
        android:id="@+id/sv_charts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_spinner"
        >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout_chart"
    >

    <LinearLayout
