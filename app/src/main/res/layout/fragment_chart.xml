                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_chartNameY"
                android:text="@string/eChartName"
                android:textSize="18dp"
                android:textColor="@color/text_black"
                android:layout_toRightOf="@id/img_icChartY"
                android:layout_marginLeft="10dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_chartTimeY"
                android:text="数据"
                android:textSize="10sp"
                android:textColor="@color/text_gray"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_chartNameY"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_coordinateSystemY"
                android:text="暂无"
                android:textSize="10sp"
                android:textColor="@color/text_gray"
