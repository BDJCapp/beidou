                android:layout_toLeftOf="@+id/tv_chartTimeHeart"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_chartTimeHeart"
                android:text="数据"
                android:textSize="10sp"
                android:textColor="@color/text_gray"
                android:layout_below="@+id/tv_chartNameHeart"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >
            <View
                android:id="@+id/lineEstHeart"
                android:layout_width="20dp"
                android:layout_height="8px"
                android:background="@color/estimate_line"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estimateLineName_Heart"
                android:textSize="11dp"
