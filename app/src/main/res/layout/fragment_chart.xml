            <TextView
                android:id="@+id/tv_LegendH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filterLineName_H"
                android:textSize="11dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_gray"
                android:layout_toRightOf="@id/lineFilH"
                />

            <View
                android:id="@+id/lineEstH"
                android:layout_width="20dp"
                android:layout_height="8px"
                android:background="@color/estimate_line"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_LegendH"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estimateLineName_H"
                android:textSize="11dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_gray"
                android:layout_toRightOf="@id/lineEstH"
                />
        </RelativeLayout>
        <com.beyond.beidou.views.MyChartView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chart_H"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:id="@+id/layout_deltaD"
        android:layout_marginTop="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_svg_linechart"
                android:id="@+id/img_icDeltaD"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_DeltaDChartName"
                android:text="@string/deltaDChartName"
                android:textSize="18dp"
                android:textColor="@color/text_black"
                android:layout_toRightOf="@id/img_icDeltaD"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_coordinateSystemDeltaD"
                android:text="暂无"
                android:textSize="10sp"
                android:textColor="@color/text_gray"
                android:layout_below="@+id/tv_DeltaDChartName"
                android:layout_toLeftOf="@+id/tv_chartTimeDeltaD"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_chartTimeDeltaD"
                android:text="数据"
                android:textSize="10sp"
                android:textColor="@color/text_gray"
                android:layout_below="@+id/tv_DeltaDChartName"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >
            <View
                android:id="@+id/lineEstDeltaD"
                android:layout_width="20dp"
                android:layout_height="8px"
                android:background="@color/estimate_line"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estimateLineName_DeltaD"
                android:textSize="11dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_gray"
                android:layout_toRightOf="@id/lineEstDeltaD"
                />
        </RelativeLayout>
        <com.beyond.beidou.views.MyChartView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chart_DeltaD"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:id="@+id/layout_deltaH"
        android:layout_marginTop="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
